    <!-- Small script: detect in-app or platform to improve CTA (safe, no telemetry) -->
    <script>
        (function(){
            const ua = navigator.userAgent || '';
            const inBase = ua.toLowerCase().includes('base'); // heuristic
            const inFarcaster = ua.toLowerCase().includes('farcaster') || location.href.includes('farcaster.xyz');

            function setContextualCTA(){
                const primary = document.getElementById('primary-action');
                const farcasterCta = document.getElementById('farcaster-cta');
                if(!primary) return;
                if(inBase){
                    primary.href = 'base://miniapp/booai' // example deep link (implement in your mini-app manifest)
                    primary.innerHTML = '<i class="fas fa-rocket"></i> Open in Base';
                } else if(inFarcaster){
                    primary.href = 'farcaster://cast/booai';
                    primary.innerHTML = '<i class="fas fa-comment"></i> Open in Farcaster';
                } else {
                    // default keeps Farcaster link
                }
            }
            // graceful: run after page loads
            window.addEventListener('DOMContentLoaded', setContextualCTA);
        })();
    </script>
